@{
    ViewData["Title"] = "Home Page";
}

<header class="masthead">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-10 align-self-end">
                <h1 class="text-white font-weight-bold">Página inicial de la plataforma UPBEats</h1>
                <hr class="divider my-4" />
            </div>
            <div class="col-lg-8 align-self-baseline">
                <p class="text-white-75 font-weight-light mb-5">En esta página se mostrará la información incial de la plataforma después de inciar sesión.</p>
                <a asp-area="" asp-controller="Usuarios" asp-action="Details" asp-route-id="@UPBEats.Controllers.HomeController.getUsuario.Id" class="btn btn-primary btn-xl">Ver perfil</a>
            </div>
        </div>
    </div>
</header>
