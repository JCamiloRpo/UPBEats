@model IEnumerable<UPBEats.Models.VendedorFavorito>

@{
    ViewData["Title"] = "Vendedores favoritos";
}
<section class="page-section">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-6">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 d-flex flex-row justify-content-between">
                            <img class="img-profile rounded-circle" id="imgFoto" src="data:image/jpg;base64, @Convert.ToBase64String(item.Vendedor.Foto)" />
                            <a class="m-0 font-weight-bold text-primary" asp-controller="Usuarios" asp-action="DetalleVendedor" asp-route-id="@item.VendedorId">@Html.DisplayFor(modeItem => item.Vendedor.NombreCompleto)</a>
                            <div class="dropdown no-arrow">
                                <form asp-action="Delete">
                                    <input type="hidden" name="Id" value="@item.Id" />
                                    <button class="btn btn-sm" id="btnFavorito" type="submit" href="#">
                                        <i class="fas fa-heart fa-2x text-primary" id="iconFavorito"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="col-md-12 text-center">
                                <p>@Html.DisplayFor(modeItem => item.Vendedor.Emprendimiento)</p>
                                <hr class="divider my-3" />
                            </div>
                            <div class="col-md-12 text-center">
                                <p>@Html.DisplayFor(modeItem => item.Vendedor.DescEmprendimiento)</p>
                                <br />
                            </div>
                            <div class="col-md-12 text-center text-muted">
                                @if (item.Vendedor.NumeroProductos == 0)
                                {
                                    <p>
                                        Este vendedor aún no ha publicado productos
                                        <i class="fas fa-cubes text-muted"></i>
                                    </p>
                                }
                                else
                                {
                                    <p>
                                        Este vendedor ha publicado @item.Vendedor.NumeroProductos productos
                                        <i class="fas fa-cubes text-muted"></i>
                                    </p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
