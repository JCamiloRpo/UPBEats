@model UPBEats.Models.Producto

@{
    ViewData["Title"] = "Publicar producto";
}

<section class="page-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <!-- Basic Card Example -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Publicar producto</h6>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <!--Campos a la derecha-->
                                <div class="col-lg-8">
                                    <div class="row">
                                        <div class="col-md-4 text-center">
                                            <div class="form-group">
                                                <label asp-for="Nombre" class="control-label"></label>
                                            </div>
                                        </div>
                                        <div class="col-md-6 text-center">
                                            <div class="form-group">
                                                <input asp-for="Nombre" class="form-control" />
                                                <span asp-validation-for="Nombre" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4 text-center">
                                            <div class="form-group">
                                                <label asp-for="Descripcion" class="control-label"></label>
                                            </div>
                                        </div>
                                        <div class="col-md-6 text-center">
                                            <div class="form-group">
                                                <input asp-for="Descripcion" class="form-control" />
                                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4 text-center">
                                            <div class="form-group">
                                                <label asp-for="Precio" class="control-label"></label>
                                            </div>
                                        </div>
                                        <div class="col-md-6 text-center">
                                            <div class="form-group">
                                                <input asp-for="Precio" class="form-control" />
                                                <span asp-validation-for="Precio" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4 text-center">
                                            <div class="form-group">
                                                <label asp-for="Foto" class="control-label"></label>
                                            </div>
                                        </div>
                                        <div class="col-md-6 text-center">
                                            <div class="form-group">
                                                <input asp-for="FileFoto" class="form-control" type="file" accept=".jpg" />
                                                <span asp-validation-for="FileFoto" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" style="visibility: hidden">
                                        <div class="col-md-4 text-center">
                                            <div class="form-group">
                                                <label asp-for="UsuarioId" class="control-label" id="UsuarioId"></label>
                                            </div>
                                        </div>
                                        <div class="col-md-6 text-center">
                                            <div class="form-group">
                                                <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId" id="cmbUsuarioId"></select>
                                                <span asp-validation-for="UsuarioId" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--Foto a la izquierda-->
                                <div class="col-lg-4 text-center justify-content-center">
                                    <img class="rounded" id="imgFoto" src="~/images/product.png" width="200" height="200" alt="Producto" />
                                    <hr class="divider my-4" />
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-md-12 text-center">
                                    <div class="form-group">
                                        <br />
                                        <input type="submit" value="Registrar" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        /**
         * Params foto Recibe la entrada a mostrar en la foto
         * Salida N/A
         * Se muestra una vista previa de la foto seleccionada
         */
        function VistaPrevia(foto) {
            if (foto.files && foto.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#imgFoto').attr('src', e.target.result);
                }
                reader.readAsDataURL(foto.files[0]);
            }
        }

        $(document).ready(function () {
            //Llamar a la funcion cuando se selecciona una foto
            $('#FileFoto').change(function () {
                VistaPrevia(this);
            });
        })

    </script>
}

