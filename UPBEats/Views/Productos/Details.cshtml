@model UPBEats.Models.Producto

@{
    ViewData["Title"] = "Detalle de productos";
}

<section class="page-section" id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Basic Card Example -->
                <div class="card shadow mb-4">
                    <!-- Card Header - Dropdown -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Detalles del producto</h6>
                    </div>
                    <div class="card-body">
                        <div class="row justify-content-center">
                            <div class="col-lg-8 text-center">
                                <img class="rounded" id="imgFoto" src="data:image/jpg;base64, @Convert.ToBase64String(Model.Foto)" width="200" height="200" alt="" />
                                <hr class="divider my-4" />
                            </div>
                            <div class="col-lg-8 text-center">
                                <form asp-action="Details" enctype="multipart/form-data">
                                    <div class="row">
                                        <div class="col-md-4 text-center ">
                                            <h5>@Html.DisplayNameFor(model => model.Nombre)</h5>
                                        </div>
                                        <div class="col-md-6 text-center">
                                            <p>@Html.DisplayFor(model => model.Nombre)</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4 text-center">
                                            <h5>@Html.DisplayNameFor(model => model.Descripcion)</h5>
                                        </div>
                                        <div class="col-md-6 text-center">
                                            <p>@Html.DisplayFor(model => model.Descripcion)</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4 text-center">
                                            <h5>@Html.DisplayNameFor(model => model.Precio)</h5>
                                        </div>
                                        <div class="col-md-6 text-center">
                                            <p>@Html.DisplayFor(model => model.Precio)</p>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
