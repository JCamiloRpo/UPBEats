@model IEnumerable<UPBEats.Models.Producto>

    @{
        ViewData["Title"] = "Inicio";
    }

    <section class="page-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">



                    @foreach (var item in Model)
                    {
                        <div class="card shadow mb-4">
                            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                <h6 class="m-0 font-weight-bold text-primary">@Html.DisplayFor(modeItem => item.Nombre)</h6>
                                <div class="dropdown no-arrow">
                                    @if (UPBEats.Controllers.HomeController.getUsuarioTipoRolId == 2)//Opciones para el vendedor
                                    {
                                        <a class="btn btn-secondary btn-circle" asp-action="Edit" asp-route-id="@item.Id">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a class="btn btn-secondary btn-circle" asp-action="Details" asp-route-id="@item.Id">
                                            <i class="fas fa-info"></i>
                                        </a>
                                        <a class="btn btn-secondary btn-circle" asp-action="Delete" asp-route-id="@item.Id">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    }
                                    else//Opciones para el comprador
                                    {
                                        <form asp-controller="ProductoFavoritos" asp-action="Favorito">
                                            <input type="hidden" value="@item.Id" name="ProductoId" />
                                            <input type="hidden" value="@UPBEats.Controllers.HomeController.getIdUsuario" name="UsuarioId" />
                                            <button class="btn btn-sm" id="btnFavorito" type="submit" href="#">
                                                @if (Convert.ToBoolean(ViewData["Favorito"]))
                                                {
                                                    <i class="fas fa-heart fa-2x text-primary" id="iconFavorito"></i>
                                                }
                                                else
                                                {
                                                    <i class="fas fa-heart fa-2x text-secondary" id="iconFavorito"></i>
                                                }
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <!--Campos a la derecha-->
                                    <div class="col-lg-8">
                                        <div class="row">
                                            <div class="col-md-4 text-center">
                                                <h5>@Html.DisplayNameFor(modeItem => item.Descripcion)</h5>
                                            </div>
                                            <div class="col-md-6 text-center">
                                                <p>@Html.DisplayFor(modeItem => item.Descripcion)</p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4 text-center">
                                                <h5>@Html.DisplayNameFor(modeItem => item.Precio)</h5>
                                            </div>
                                            <div class="col-md-6 text-center">
                                                <p>@Html.DisplayFor(modeItem => item.Precio)</p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4 text-center">
                                                <h5>@Html.DisplayNameFor(modeItem => item.Usuario.Emprendimiento)</h5>
                                            </div>
                                            <div class="col-md-6 text-center">
                                                <p>@Html.DisplayFor(modeItem => item.Usuario.DescEmprendimiento)</p>
                                            </div>
                                        </div>
                                    </div>
                                    <!--Foto a la DErecha-->
                                    <div class="col-lg-4 text-center justify-content-center">
                                        <img class="rounded" id="imgFoto" src="data:image/jpg;base64, @Convert.ToBase64String(item.Foto)" width="200" height="200" alt="Producto" />
                                        <hr class="divider my-4" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>

