@model UPBEats.Models.ProductoFavorito

@{
    ViewData["Title"] = "Detalle del producto favorito";
}


<section class="page-section" id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Basic Card Example -->
                <div class="card shadow mb-4">
                    <!-- Card Header - Dropdown -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">@Html.DisplayFor(model => model.Producto.Nombre)</h6>
                        <div class="dropdown no-arrow">
                            <form asp-action="Delete">
                                <input type="hidden" name="Id" value="@Model.Id" />
                                <button class="btn btn-sm" id="btnFavorito" type="submit" href="#">
                                    <i class="fas fa-heart fa-2x text-primary" id="iconFavorito"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <!--Campos a la derecha-->
                            <div class="col-lg-8">
                                <div class="row">
                                    <div class="col-md-12 text-center">
                                        <p>@Html.DisplayFor(model => model.Producto.Descripcion)</p>
                                        <hr class="divider my-3" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <h6>@Html.DisplayNameFor(model => model.Producto.Precio)</h6>
                                    </div>
                                    <div class="col-md-6">
                                        <p>@Html.DisplayFor(model => model.Producto.Precio)</p>
                                        <br />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <h6>@Html.DisplayNameFor(model => model.Usuario.Emprendimiento)</h6>
                                    </div>
                                    <div class="col-md-6">
                                        <p>@Html.DisplayFor(model => model.Usuario.DescEmprendimiento)</p>
                                    </div>
                                </div>
                            </div>
                            <!--Foto a la izquierda-->
                            <div class="col-lg-4 text-center justify-content-center">
                                <img class="rounded" id="imgFoto" src="data:image/jpg;base64, @Convert.ToBase64String(Model.Producto.Foto)" width="200" height="200" alt="Producto" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 text-center text-muted">
                                @if (Model.Producto.Disponible)
                                {
                                    <p>
                                        Disponible
                                        <i class="fas fa-smile text-muted"></i>
                                    </p>
                                }
                                else
                                {
                                    <p>
                                        Agotado
                                        <i class="fas fa-frown text-muted"></i>
                                    </p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
